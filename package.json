{
  "name": "mind-toolbox",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --project mind-frontend",
    "build": "ng build --project mind-frontend",
    "build:frontend": "ng build --project mind-frontend",
    "build:backend": "echo 'Backend builds via wrangler'",
    "watch": "ng build --watch --configuration development --project mind-frontend",
    "test": "ng test --project mind-frontend",
    "test:frontend": "ng test --project mind-frontend",
    "deploy": "npm run build:frontend && npx wrangler deploy",
    "dev:frontend": "ng serve --project mind-frontend",
    "dev:backend": "npx wrangler dev"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/router": "^21.1.1",
    "@supabase/supabase-js": "^2.84.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.1.1",
    "@cloudflare/workers-types": "^4.20260212.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wrangler": "^4.64.0"
  }
}
